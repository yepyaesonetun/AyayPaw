<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ShowCaseViewStyle" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">@color/showCaseBackground</item>
        <item name="sv_showcaseColor">@color/showCaseTintColor</item>
        <item name="sv_buttonText">Start</item>
        <item name="sv_tintButtonColor">true</item>
        <item name="sv_titleTextAppearance">@style/ShowCaseTitleStyle</item>
        <item name="sv_detailTextAppearance">@style/TextAppearance.ShowcaseView.Detail</item>

    </style>


    <style name="ShowCaseTitleStyle" parent="TextAppearance.ShowcaseView.Title.Light">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="TextAppearance.ShowcaseView.Detail" parent="android:TextAppearance">
        <item name="android:textColor">#fff</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#5fa3d0</item>
        <item name="android:textColorPrimary">#e62117</item>
        <item name="android:background">#FFFFFF</item>
    </style>




    <style name="CustomDialogTheme" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">Updatingâ€¦</item>
        <item name="DialogSpotColor">@android:color/holo_red_dark</item>
        <item name="DialogSpotCount">5</item>
    </style>

</resources>
